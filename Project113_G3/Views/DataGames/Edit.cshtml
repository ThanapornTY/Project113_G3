@model Project113_G3.Models.Datagame

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mitr">
    <link rel="stylesheet" type="text/css" href="~/Content/css/Dashboard_css.css">

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>


    <title>Index</title>
</head>
<body>
    <input type="checkbox" id="check" />
    <label for="check">
        <i class="fa fa-bars" id="okbuttom">
            <ion-icon name="menu-outline"></ion-icon>
        </i>

        <i class="fa fa-time" id="cancelbuttom">
            <ion-icon name="close-outline"></ion-icon>
        </i>

    </label>

    <div class="navigation">
        <ul>
            <content>FPTP</content>
            <li>
                <a href="#">
                    <span class="UserAcc">ชื่อสมาชิก</span>
                </a>
            </li>
            <li>
                <a href="~/Dashboard/Index/">
                    <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                    <span class="title">Home</span>
                </a>
            </li>

            <li>
                <a href="~/DataGames/Index">
                    <span class="icon"><ion-icon name="game-controller-outline"></ion-icon></span>
                    <span class="title">System Information</span>
                </a>
            </li>

            <li>
                <a href="~/UserDatas/Index">
                    <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
                    <span class="title">Account</span>
                </a>
            </li>

            <li>
                <a href="~/RQ_Reported/Index">
                    <span class="icon"><ion-icon name="reader-outline"></ion-icon></span>
                    <span class="title">Reporting</span>
                </a>
            </li>

            <li>
                <a href="#">
                    <span class="icon"><ion-icon name="git-pull-request-outline"></ion-icon></span>
                    <span class="title">Request</span>
                </a>
            </li>

            <li>
                @Html.Partial("_LoginPartial")
            </li>
        </ul>
    </div>

    <!--ที่ปิดเมนู / ช่องค้นหา / โปรไฟล์ Admin-->
    <div class="main">
        <div class="topbar">
            <div class="Namepage">
                <h3>ชื่อหน้านั้น</h3>
            </div>

            <div class="search">
                <input type="text" placeholder="Search here!" />
                <ion-icon name="search-outline"></ion-icon>
            </div>

            <div class="accountPic">
                <img src="~/Content/images/SH2.jpg" />
            </div>
        </div>


        <!-- กรอบข้อมูลกราฟ-->
        <div class="details">

            <div class="graph">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Datagame</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.NameGame, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NameGame, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NameGame, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TypeGame, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TypeGame, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TypeGame, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Description_Game, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Description_Game, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description_Game, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.url, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.url, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.url, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>

    </div>
</body>
</html>